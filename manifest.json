{
  "manifest_version": 3,
  "name": "Paywall Remover",
  "version": "1.1",
  "description": "Hide modal overlays dynamically.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Configure Selectors",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons":{
    "48":"icon.png"
  }
}
